<div class="listing">
  {% for item in list %}
    {% set label = item.label | default ? item.label : item.type.label | default %}
    {% set item_type = item.type | default and item.type.handle ? item.type.handle : '' %}
    <div class="item">
      <div class="media-object {% if item.image | default %}align-middle media-object--stack{% endif %}">

          {% if (item_type == 'events' and item.image | default is empty ) or item.image | default %}
            <div class="media-object-section">
              {% if item_type == 'events' and item.image | default is empty %}
                {% include 'components/inline-text/date.twig' with {
                  date: item.start_date
                } %}
              {% elseif item.image | default %}
                <div class="wrapper">
                  <img data-src="{{ item.image.src }}" alt="{{ item.image.alt }}" class="js-lazy">
                  {% if item_type == 'events' %}
                    {% include 'components/inline-text/date.twig' with {
                      date: item.start_date
                    } %}
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endif %}
          <div class="media-object-section">
            <h2><a href="{{ item.url }}">{{ item.heading }}</a></h2>
            {% if item_type | default != 'events' and item.date.full | default %}<p class="label m-b-2">{{ item.date.full }}</p>{% endif %}
            <p class="m-b-2">{{ item.summary }}</p>
            {% if item.categories | length %}
              {% include 'components/inline-text/meta.twig' with {
                  categories: item.categories,
                  date: null

              } %}

            {% endif %}
          </div>

      </div>

    </div>
  {% endfor %}
</div>
