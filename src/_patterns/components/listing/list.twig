<div class="listing">
  {% for item in list %}
    {% set label = item.label | default ? item.label : item.type.label | default %}
    {% set item_type = item.type | default and item.type.handle ? item.type.handle : '' %}
    <div class="item">
      <div class="row grid-margin-x align-middle">
        {% if item.image | default %}
          <div class="col col-md-5 col-lg-3 medium-order-2">
            <div class="wrapper image-size--landscapeCroppedMedium">
              <img data-src="{{ item.image.src }}" alt="{{ item.image.alt }}" class="js-lazy">
            </div>
          </div>
        {% endif %}
        <div class="col {% if item.image | default %}col-md-7 col-lg-9 medium-order-1{% endif %}">
          <div class="media-object">

            <div class="media-object-section">
              {% include patternlab_namespace | default ~ 'components/inline-text/date.twig' with {
                date: item.start_date
              } %}

            </div>

            <div class="media-object-section">
              <h2><a href="{{ item.url }}">{{ item.heading }}</a></h2>
              {% if item_type | default != 'events' and item.date.full | default %}
                {% include patternlab_namespace | default ~ 'components/inline-text/meta.twig' with {
                  date: item.date,
                  meta_class: 'mb-2'
                } %}
              {% endif %}
              {% if item.summary | default %}
                <p class="mb-2">{{ item.summary }}</p>
              {% endif %}
              {% if item.categories | default | length %}
                {% include patternlab_namespace | default ~ 'components/inline-text/meta.twig' with {
                    categories: item.categories,
                    date: null

                } %}

              {% endif %}
            </div>

          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
