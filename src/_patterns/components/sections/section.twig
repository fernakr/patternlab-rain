
{% set section_intro %}
  {% if section_heading | default %}
      <div class="section_intro {{ intro_class }}">
        <div class="grid-x grid-margin-x align-middle align-center">
          {% if section_image | default %}
            <div class="cell medium-4">
              <img data-src="{{ section_image.url }}" alt="{{ section_image.alt }}" class="js-lazy">
            </div>
          {% endif %}
          <div class="cell {% if style | default is empty %}medium-8{% endif %}">
            <h2 class="section_heading">{{ section_heading }}</h2>
            {% if section_subheading | default %}
              <h3 class="section_subheading">{{ section_subheading }}</h3>
            {% endif %}
            {% if section_description | default %}
              <p class="lead">{{ section_description }}</p>
            {% endif %}
            {% if section_button | default %}
              {% include 'components/inline/_button.twig' with {
                "button" : section_button
              } %}
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}
{% endset %}
{% set section_content %}
  <div class="section_content">
    {% block section_content %}
    {% endblock %}
  </div>
{% endset %}
<section class="section {{ class }} {% if style | default %}section--{{ style }} {% endif %} {% if section_background | default %}js-lazy{% endif %}" {% if section_background | default %}data-bg="{{ section_background }}"{% endif %}>
  <div class="grid-container {{ grid_class }}">
    {% if style | default and (style == 'side' or style == 'half') %}
      <div class="grid-x align-middle">
        <div class="cell {% if style == 'half' %}large-6{% else %}large-8{% endif %}">
          {{ section_intro }}
        </div>
        <div class="cell {% if style == 'half' %}large-6{% else %}large-4{% endif %}">
          {{ section_content }}
        </div>
      </div>
    {% else %}
      {{ section_intro }}
      {{ section_content }}
    {% endif %}
  </div>
</section>
