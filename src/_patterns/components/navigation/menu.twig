<div  data-responsive-toggle="responsive-menu" data-hide-for="large" class="top-bar_toggle" >
  {% include "components/misc/hamburger.twig" with {
    toggle: "responsive-menu"
  } %}
</div>

<div class="top-bar" id="responsive-menu">
  <div data-responsive-toggle="responsive-menu" data-hide-for="large">
    <button class="top-bar_close hide-for-large" data-toggle="responsive-menu">
      <span class="show-for-sr">Collapse menu</span>
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="top-bar-left">
    <ul class="vertical large-horizontal menu top" data-responsive-menu="accordion large-dropdown" data-click-open="true" data-disable-hover="true">
      {% for link in menu %}
      <li>
        <a href="{{ link.url }}">{{ link.text }}</a>
        {% if link.children is not empty %}
        <ul class="vertical menu">
          <li class="parent-link"><a href="{{ link.url }}" class="color-primary">{{ link.text }} Overview</a></li>
          {% for child in link.children %}
            <li>
              <a href="{{ child.url }}">{{ child.text }}</a>
              {% if child.children is not empty %}
              <ul class="vertical menu">
                <li><a href="{{ child.url }}">{{ child.text }} Overview</a></li>
                {% for grandchild in child.children %}
                  <li>
                    <a href="{{ grandchild.url }}">{{ grandchild.text }}</a>
                  </li>
                {% endfor %}
              </ul>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
        {% endif %}
      </li>
      {% endfor %}

      <li class="search-wrapper">
        <div id="search-form" class="search-form">
          {% include 'components/misc/simple-form.twig' %}
        </div>
      </li>

    </ul>

  </div>
</div>
