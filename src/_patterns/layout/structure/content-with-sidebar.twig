{% embed 'components/sections/section.twig' with {
  'class': 'section--tight'
} %}
  {% block section_content %}

    <div id="content">
      <div class="grid-x grid-margin-x">
        <div class="cell medium-8">
            {{ content }}
        </div>
        <div class="cell medium-4">
          <div data-sticky data-anchor="content" data-sticky-on="large">
            {{ sidebar }}
          </div>
        </div>
      </div>
    </div>

  {% endblock %}

{% endembed %}
