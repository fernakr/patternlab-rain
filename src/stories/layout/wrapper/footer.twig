<footer class="l-footer text-white text-center bg-primary py-8">
  <div class="container">
    <div class="grid grid-cols-12 gap-6">

      <div class="col-span-12 md:col-span-5 md:order-2 md:text-left">
        <div class="flex flex-col lg:flex-row flex-justify-center gap-x-3 gap-y-3">
          <div>
            {% include '@components/logo/logo.twig' with logo %}
          </div>
          <div>
            <address>
             {{ address | default | nl2br }}
            </address>
          </div>
        </div>

      </div>
      <div class="col-span-12  md:order-1">
        <ul class="menu flex flex-col md:flex-row justify-between gap-x-3 gap-y-4 list-none">
        {% for item in menu %}
          <li>
            <a class="font-bold no-underline hover:underline" href="{{ item.url }}">{{ item.text }}</a>
          </li>
        {% endfor %}
      </ul>
      </div>
      <div class="col-span-12 md:col-span-7 md:text-right md:order-3 my-4">
        {% include '@components/utils/social-media/social-media.twig' %}
      </div>
    </div>

    <ul class="list-none flex gap-4 justify-center mb-2">
      {% for link in footer_links | default %}
        <li>          
          {% include '@components/links/link.twig' with link %}
        </li>
      {% endfor %}
    </ul>
    <p>Copyright &copy; {{ copyright_year | default(2022) }} {{ site_name | default }}</p>

  </div>
  {% include '@components/utils/back-to-top/back-to-top.twig' with {
    scroll_show: true
  } %}
</footer>
