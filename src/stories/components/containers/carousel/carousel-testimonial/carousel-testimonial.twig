

  {% embed '@components/containers/slick/slick.twig' with {
    slick_class: 'slick-slider--equalize'
  } %}
    {% block slide_content %}
      {% for card in cards %}
          <div class="mx-2 my-2">
            {% set card = card | merge({
              class: 'w-full',
              lazyload_attr: 'data-lazy'
            }) %}
            {% include '@components/teasers/card/card-testimonial.twig' with card only %}

          </div>
        {% endfor %}
    {% endblock %}
  {% endembed %}

