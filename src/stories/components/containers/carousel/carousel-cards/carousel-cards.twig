

  {% embed '@components/containers/slick/slick.twig' with {
    modifier: 'cards',
    grid: true,
    equalize: true
  }%}
    {% block slide_content %}
      {% for card in cards %}
        <div class="lg:mx-2 my-2">
          {% set card = card | merge({
            lazyload_attr: 'data-lazy',
            class: 'w-full',
          }) %}
          {% include "@components/teasers/card/card.twig" with card only %}
        </div>
      {% endfor %}
    {% endblock %}
  {% endembed %}

