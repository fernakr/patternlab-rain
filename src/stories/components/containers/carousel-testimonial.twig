

  {% embed '@components/containers/slick.twig' with {
    slick_class: 'slick-slider--equalize'
  } %}
    {% block slide_content %}
      {% for card in cards %}
          <div>
            {% set card = card | merge({
              image: card.image,
              lazyload_class: 'data-lazy',
              quote: card.quote,
              attribution: card.attribution,

            }) %}
            {% include '@components/teasers/card-testimonial.twig' with card %}

          </div>
        {% endfor %}
    {% endblock %}
  {% endembed %}

