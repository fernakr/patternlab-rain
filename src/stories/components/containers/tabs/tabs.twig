<div x-data="{{'{' }} expanded: 0 {{ ' }'}}">


  <ul class="tabs list-none mb-0 flex" data-tabs id="{{ tabs_id | default }}" >
    {% for tab in tabs %}
      <li class="tabs-title mr-1" :class="expanded === {{ loop.index0 }} ? 'bg-primary text-white' : ''">
        <button @click="expanded = {{ loop.index0 }}" class="bg-gray-lightest px-1 lg:px-5 py-1 lg:py-2" data-href="#{{ tab.id }}" aria-selected="true">{{ tab.text }}</button>
      </li>
    {% endfor %}
  </ul>

  <div class="tabs-content" data-tabs-content="{{ tabs_id | default  }}">

      {% for tab in tabs %}
        <div  x-show="expanded === {{ loop.index0 }}" tabindex="0" id="{{ tab.id }}" class="tabs-panel py-4 lg:py-5 px-4">
          {{ tab.content | raw }}
        </div>
      {% endfor %}

  </div>

</div>