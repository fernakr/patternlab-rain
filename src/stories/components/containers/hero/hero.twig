<div class="hero text-white bg-primary py-10">
  <div class="container mx-auto">
    <div class="grid grid-cols-12 gap-6 gap-y-3 lg:g-y-0">
      <div class=" lg:col-span-8 md:col-span-6 md:order-1">
        {% include '@components/navigation/breadcrumbs/breadcrumbs.twig' with breadcrumbs %}
      </div>

      <div class=" md:col-span-12 md:order-3">
        <div class="hero_content">
          <div class="grid grid-cols-12 gap-6 grid-margin-y items-center">
            {% if image | default %}
              <div class=" md:col-span-4">
                <img src="{{ image.src }}" alt="{{ image.alt }}">
              </div>
            {% endif %}
            <div class=" {% if image | default %}md:col-span-8{% endif %}">
              {% if date | default and endDate | default %}
                {% include '@components/inline-text/meta/meta.twig' with {
                  date: date,
                  endDate: endDate
                } only %}
              {% endif %}
              <h1>{{ heading }}</h1>
                        
              {% if subheading | default %}
                <p class="lead">{{ subheading }}</p>
              {% endif %}
              {% if list | default %}
                <ul class="list-unstyled flex gap-4 list-divided fw-bold text-small mb-3">
                  {% for item in list %}                    
                    <li>{{ item }}</li>
                  {% endfor %}
                </ul>
              {% endif %}
              {% if summary | default %}                
                <p>{{ summary }}</p>
              {% endif %}

              {% if hero_button | default %}
                {% set hero_button = hero_button | merge({
                  color: 'secondary'
                }) %}
                {% include '@components/links/button/button.twig' with hero_button %}
              {% endif %}
              {% if categories | default %}
                {% include '@components/inline-text/meta/meta.twig' with {
                  date: endDate | default is empty ? date : false,
                  categories: categories
                } only%}
              {% endif %}
            </div>
          </div>

        </div>
      </div>
      <div class=" lg:col-span-4 md:col-span-6 md:order-2">
        {% include '@components/utils/add2any/add2any.twig' with {
          class: 'mb-0'
        } %}
      </div>
    </div>
  </div>

</div>
