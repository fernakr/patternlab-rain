{% embed '@components/sections/section.twig' with {
  collapse: true,
  section_class: "section--tight " ~ section_class | default,
  section_style: "narrow"
} %}
  {% block section_content %}
    {% include '@components/teasers/card-horizontal.twig' with {
      modifier: "",
      image: image | default,
      summary: summary | default,
      heading: heading | merge({
        text: heading,
        level: heading.level | default(3)
      }),
      link: link | default

    } %}
  {% endblock %}
{% endembed %}
