{% embed '@components/sections/section.twig' with {
    "intro_class": "text-center",
    "section_heading": section_heading | default ? section_heading : "Links List Module Heading",
    "section_description":  section_description | default,
  }
%}

  {% block section_content %}
      <div class="links">

        {% for link in links %}
          {% if loop.first or loop.index0 % 3 == 0 %}
            {% if loop.index0 % 3 == 0 and loop.first == false %}
              </div>
            {% endif %}
            <div class="grid-x">
          {% endif %}
              <div class="cell medium-4">

                {% if link | default is not empty %}
                  {% include '@components/links/read-more.twig' with {
                        "read_more": {
                          "class": "h3",
                          "url": link.url,
                          "target": link.target,
                          "text": link.text
                        }
                      }
                  %}
                {% endif %}

              </div>
          {% if loop.last %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
  {% endblock %}
{% endembed %}
