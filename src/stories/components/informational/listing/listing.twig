<ul class="list-none gap-y-2 flex flex-col {{ listing_class }}">

    {% for item in items %}

      <li>
        <span class="font-bold {% if item.icon | default %}inline-flex gap-1 items-center{% endif %}">{% if item.icon | default %}<i class="icon icon-{{ item.icon }} icon--tiny"></i>{% endif %}{{ item.label }}</span><br />
        {% if item.url | default %}
          <a href="{{ item.url }}">{{ item.value }}</a>
        {% else %}
          {{ item.value }}
        {% endif %}
      </li>

    {% endfor %}

  </ul>
