<div class="form-input {{ input_class | default }}">
  <label for="{{ id | default }}">{{ label }} {% if required | default %}<span class="form-required">*</span>{% endif %}</label>
  {% block field %}
  {% endblock %}
  {% if required | default %}
    <span class="form-error">{{ label }} is required</span>
  {% endif %}
</div>
