{% if anchor_items %}
  <div data-sticky-container id="anchormenu">
    <div class="anchormenu bg-primary-darker color-white"  data-sticky data-sticky-on="small" data-options="marginTop:0;" style="width:100%" data-top-anchor="anchormenu:top" data-anchormenu>
      <div class="grid-container">
        {% set anchor_dropdown = [] %}
        {% for item in anchor_items %}
          {% set anchor_dropdown = anchor_dropdown | merge([{
            value: item.anchor,
            title: item.text
          }]) %}
        {% endfor %}
        <div class="hide-for-large anchormenu_mobile">
          {% include '@components/containers/dropdown/dropdown.twig' with {
              id: 'anchor_mobile',
              label_trigger: true,
              placeholder: 'Select a section',
              label_mobile: 'Jump to',
              items: anchor_dropdown
          } %}
        </div>

        <ul class="menu horizontal text-center align-center show-for-large">
          {% for item in anchor_items %}
            <li>
              <a href="{{ item.anchor }}">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
{% endif %}
