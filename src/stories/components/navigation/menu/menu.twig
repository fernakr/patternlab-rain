<div  data-responsive-toggle="responsive-menu" data-hide-for="large" class="lg:hidden" >
  {% include  "@components/utils/hamburger/hamburger.twig" with {
    toggle: "responsive-menu"
  } %}
</div>

<div id="responsive-menu">
  {#
  <div data-responsive-toggle="responsive-menu" data-hide-for="large">
    <button class="top-bar_close lg:hidden" data-toggle="responsive-menu">
      <span class="sr-only">Collapse menu</span>
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  #}
  
    <ul role="menubar" class="flex justify-between gap-x-3" data-responsive-menu="accordion lg:dropdown" {% if click | default %}data-click-open="true" data-disable-hover="true"{% endif %}>
      {% for link in menu %}
        <li  role="presentation" {% if loop.last %}class="last"{% endif %}>
          <a class="text-black no-underline font-bold" {% if link.new_window | default %}target="_blank" rel="noopener"{% endif %} role="menuitem" href="{{ link.url }}">{{ link.parent_text | default is not empty ? link.parent_text : link.text }}</a>
          {% if link.children | default %}
          <ul  role="presentation" class="hidden">
            <li  role="presentation" class="parent-link"><a {% if link.new_window | default %}target="_blank" rel="noopener"{% endif %} href="{{ link.url }}" class="text-primary">{{ link.text }} Overview</a></li>
            {% for child in link.children %}
              <li role="presentation">
                <a role="menuitem" href="{{ child.url }}">{{ child.text }}</a>
                {% if child.children | default %}
                <ul  role="presentation" class="hidden">
                  <li role="presentation"><a {% if child.new_window | default %}target="_blank" rel="noopener"{% endif %} href="{{ child.url }}">{{ child.text }} Overview</a></li>
                  {% for grandchild in child.children %}
                    <li role="presentation">
                      <a role="menuitem" href="{{ grandchild.url }}">{{ grandchild.text }}</a>
                    </li>
                  {% endfor %}
                </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
      {% endfor %}    
    </ul>
    <div class="lg:hidden search-wrapper">
      {% include  '@components/forms/simple-form/simple-form.twig' with {
        input_id: 'keywords_mobile'
      }%}
    </div>


  
</div>
