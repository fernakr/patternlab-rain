

{% if breadcrumbs %}
  <nav role="navigation" aria-label="You are here:">
    <ul class="breadcrumbs mb-5 flex gap-2">
      {% for item in breadcrumbs %}
        <li>
          {% if item.url %}
            <a href="{{ item.url }}" >{{ item.text }}</a>
          {% else %}
            <span class="breadcrumb__current">{{ item.text }}</span>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}
