<div class="card card--horizontal">
  <div class="card-section">
    <div class="grid-x grid-margin-x align-middle">
      <div class="cell large-7">
        <h2>{{ heading }}</h2>
        <h3>{{ subheading }}</h3>
        {% if description is not empty %}
          <p class="m-b-3">{{ description }}</p>
        {% endif %}
        {% if link | default %}
          {% include '../links/read-more.twig' with link %}
        {% endif %}
      </div>
      <div class="cell large-5">
        <div class="callout bg-solid-gray-lightest text-small">
          {% include '../informational/listing.twig' with {
          "listing_class": 'm-b-0',
          "items": items
        } %}
        </div>
      </div>
    </div>
  </div>
</div>
