
<div class="card {{ class | default }} {{ modifier | default ? 'card--' ~ modifier : '' }} {% if clickCard | default %}card--click{% endif %}" >
  {% if header | default %}
  <div class="card-divider">
    {{ header }}
  </div>
  {% endif %}
  {% if image | default %}
    <div class="card-image">
      <img src="{{ image.src }}" alt="{{ image.alt }}">

      {% if type.handle | default == 'events' and date | default %}
        {% include '@components/inline-text/date/date.twig' with date %}
      {% endif %}
      {% if flag | default %}
        {% include '@components/inline-text/flag/flag.twig' with {
          flag_text: flag
        }%}
      {% endif %}
    </div>
  {% endif %}
  <div class="card-section" {% if equalize | default %}data-equalizer-watch{% endif %}>
    {% if image | default is empty %}
        {% if flag | default %}
          {% include '@components/inline-text/flag/flag.twig' with {
            flag_class: "card_flag"
          }%}
      {% endif %}
    {% endif %}
    {% include '@components/teasers/card/_card-content.twig' %}
    {% if footer | default %}
      <div class="card-footer">
        {{ footer }}
      </div>
    {% endif %}
  </div>
</div>
