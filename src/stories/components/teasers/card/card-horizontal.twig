<div class="card shadow-lg card--horizontal bg-white {{ modifier | default }} {% if clickCard | default %}card--click{% endif %}" data-scroll-show>
  <div {% if image_position | default != 'flush' %}class="card_section py-8 px-8"{% endif %}>
    <div class="grid grid-cols-12 gap-y-4 {% if image_position | default != 'flush' %}gap-x-5 lg:gap-x-8  items-center{% endif %} ">
      {% if image | default %}
        <div class="col-span-12 md:col-span-5 lg:col-span-5 {% if image.alignment | default and image.alignment == 'right' %}md:order-2{% endif %}">
          <div class="card_image image-size--landscapeCroppedMedium">
            <img {% if lazyload_attr | default %}{{ lazyload_attr }}="{{ image.src }}"{% else %}src="{{ image.src }}" loading="lazy"{% endif %}  alt="{{ image.alt }}" class="w-full ">
          </div>
        </div>
      {% endif %}
      <div class="col-span-12 {% if image | default %}md:col-span-7 lg:col-span-7 {% if image.alignment  | default and image.alignment == 'right' %}md:order-1{% endif %}{% endif %}">
        {% if image_position | default == 'flush' %}          
          <div class="card_section py-6 px-8 flex justify-center flex-col h-full flex">
        {% endif %}
              {% include '@components/teasers/card/_card-content.twig' %} 
        {% if image_position | default == 'flush' %}
          </div>
        
        {% endif %}
          
      </div>
    </div>
  </div>
</div>
