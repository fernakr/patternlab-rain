{% extends '@wrappers/default.twig' %}
{% block top %}
  {% include "@components/containers/hero.twig" with hero %}
{% endblock %}
{% block main %}
  {% if narrow_modules | default | length > 0 %}
    {% set content %}
      {% for module in narrow_modules %}
      {% if module.module_type == 'wysiwyg' %}
        {{ module.wysiwyg }}
      {% endif %}
      {% endfor %}   
    {% endset %}
    {% if sidebar_modules | default | length > 0 %}
      {% set sidebar %}
        {% for module in sidebar_modules %}
          {% if module.module_type == 'card' %}
            {% include "@components/teasers/card/card.twig" with module %}
          {% endif %}
        {% endfor %}           
      {% endset %}
    {% endif %}
    {% embed '@components/sections/section.twig' with {
      section_class: 'section--tight'
    } %}
      {% block section_content %}
        {% include '@layout/structure/content-with-sidebar.twig' %}
      {% endblock %}
    {% endembed %}
  {% endif %}

  {% include '@components/navigation/anchor.twig' %}
  {% for module in modules %}
    {% if module.module_type == 'wysiwyg' %}
      {% include '@components/modules/wysiwyg.twig' with module %}
    {% elseif module.module_type == 'video' %}
      {% include '@components/modules/video.twig' with module %}
    {% elseif module.module_type == 'contact' %}
      {% include '@components/modules/contact.twig' with module %}
     {% elseif module.module_type == 'accordion' %}
      {% include '@components/modules/accordion.twig' with module %}
    {% elseif module.module_type == 'horizontalCard' %}
      {% include '@components/modules/horizontal-card.twig' with module %}
    {% elseif module.module_type == 'testimonial' %}
      {% include '@components/modules/testimonial.twig' with module %}
    {% elseif module.module_type == 'tabs' %}
      {% include '@components/modules/tabs.twig' with module %}
    {% elseif module.module_type == 'cta' %}
      {% include '@components/modules/cta.twig' with module %}
    {% elseif module.module_type == 'card-group' %}
      {% include '@components/modules/card-group.twig' with module %}
    {% elseif module.module_type == 'card-carousel' %}
      {% include '@components/modules/card-carousel.twig' with module %}
    {% elseif module.module_type == 'card-carousel-center' %}
      {% include '@components/modules/card-carousel-center.twig' with module %}
    {% elseif module.module_type == 'testimonial-carousel' %}
      {% include '@components/modules/testimonial-carousel.twig' with module %}
    {% elseif module.module_type == 'step-list' %}
      {% include '@components/modules/step-list.twig' with module %}
    {% elseif module.module_type == 'statistics' %}
      {% include '@components/modules/statistics.twig' with module %}
    {% elseif module.module_type == 'links' %}
      {% include '@components/modules/links.twig' with module %}
    {% elseif module.module_type == 'testimonial-carousel' %}
      {% include '@components/modules/testimonial-carousel.twig' with module %}
    {% endif %}

  {% endfor %}

{% endblock %}
