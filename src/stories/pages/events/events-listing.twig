{% extends '@wrappers/default.twig' %}
{% block top %}
  {% include '@components/containers/hero/hero.twig'  with {
    heading: 'Events Listing'
  } %}
{% endblock %}
{% set listing_image_transform = image_sizes.landscapeCroppedMedium %}
{% block main %}
  {% embed '@components/sections/section.twig' with {
    padding: 'tight',    
    style: 'narrow'
  } %}
    {% block section_content %}
      {% include '@components/listing/filter/filter.twig' with {
        ajax: true
      }%}
      {% include '@components/listing/list/list.twig' with
      {
          list: items
        }

       %}
      {% include '@components/listing/pagination/pagination.twig' with pagination %}
    {% endblock %}
  {% endembed %}
{% endblock %}
