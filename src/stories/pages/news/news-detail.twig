{% extends '@pages/wrapper.twig' %}
{% set type = {
  label: 'News',
  handle: 'news'
}%}
{% block top %}
  {% include "components/containers/hero.twig"  with {
    heading: 'News Detail'
  } %}
{% endblock %}
{% block main %}
  {% embed 'components/sections/section.twig' with {
    section_class: 'section--tight section--collapse'
  } %}
    {% block section_content %}
      {% include 'components/inline-text/meta.twig' with {
        date: {
          unformatted: "2021-08-12",
          full: 'August 12, 2021',
        },
        categories: [
          {
            url: "#",
            title: "News Category"
          }
        ]
      }%}
    {% endblock %}
  {% endembed %}
  {% include 'components/modules/wysiwyg.twig' with {
    section_class: 'section--collapse'
  }%}
{% endblock %}
