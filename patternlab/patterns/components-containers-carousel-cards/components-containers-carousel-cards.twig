

  {% embed patternlab_namespace | default ~ 'components/containers/slick.twig' with {
    modifier: 'cards',
    grid: true,
    equalize: true
  }%}
    {% block slide_content %}
      {% for card in cards %}
          {% set card = card | merge({lazyload_class: 'data-lazy'}) %}
          {% include patternlab_namespace | default ~ "components/teasers/card.twig" with card %}
      {% endfor %}
    {% endblock %}
  {% endembed %}

