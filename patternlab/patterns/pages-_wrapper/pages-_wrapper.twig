<div class="l-wrapper">
  {% include "layout/wrapper/header.twig" %}
  <div class="l-main">
    {% include 'components/informational/alert.twig' with {
      alert_label: "Alert",
      text: "Important message goes here and is an optional link lorem ipsum dolor sit amet, consectetur adipiscing elit."
    }%}
    {% block main %}
    {% endblock %}
  </div>
  {% include "layout/wrapper/footer.twig" %}
