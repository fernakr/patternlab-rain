


<ul class="tabs" data-tabs id="{{ id | default }}">
  {% for tab in tabs %}
    <li class="tabs-title {{ tab.active ? 'is-active' }}"><button data-href="#{{ tab.id }}" aria-selected="true">{{ tab.text }}</button></li>
  {% endfor %}
</ul>

<div class="tabs-content" data-tabs-content="{{ id | default  }}">

    {% for tab in tabs %}
      <div tabindex="0" id="{{ tab.id }}" class="tabs-panel {{tab.active ? 'is-active'}}">
        {{ tab.content | raw }}
      </div>
    {% endfor %}

</div>
