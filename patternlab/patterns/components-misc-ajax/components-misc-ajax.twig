<section class="section bg-primary-darker">
  <div class="grid-container">
    <h2>Ajax</h2>
    <div class="grid-x grid-margin-x" data-sticky-container id="event-content">
      <div class="cell medium-4" >
        <div data-ajax-form="events" data-sticky data-sticky-on="medium" data-anchor="event-content">
          <div>
            <label for="keywords">Keywords</label>
            <input type="text" id="keywords" placeholder="Search title, description" data-filter-keywords="title,description" name="keywords">
          </div>
          <hr>
          <fieldset>
            <legend>Radio Category</legend>
            <span>
              <input data-filter class="custom" type="radio" name="categories" id="category_all" value="" checked/>
              <label for="category_all">All</label>
            </span>
            {% for i in range (i, 2) %}
              <span>
                <input data-filter class="custom" type="radio" name="categories" id="category_{{ i }}" value="{{ i }}"/>
                <label for="category_{{ i }}">Category {{ i }}</label>
              </span>
            {% endfor %}
          </fieldset>
          <hr>
          <fieldset data-filter-checkbox="groups">
            <legend>Checkbox Group</legend>
            {% for i in range (i, 5) %}
              <span>
                <input class="custom" type="checkbox" name="groups" id="group_{{ i }}" value="{{ i }}"/>
                <label for="group_{{ i }}">Group {{ i }}</label>
              </span>
            {% endfor %}

          </fieldset>
          <div>
            <hr>
              <span>
                <input data-filter class="custom" type="checkbox" name="active" id="checkbox_single" value="1"/>
                <label for="checkbox_single">Active</label>
              </span>
          </div>
        </div>
      </div>
      <div class="cell medium-8">
        <p data-ajax-num-results="events">There were <strong class="value"></strong> results for your search/filters</p>
        <div data-ajax id="events"></div>
        <div data-ajax-no-results="events" class="hide">
          <p>There were no results for your search/filters</p>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="section">
  <div class="grid-container">
    <h2>Partial include</h2>
    {% include 'components/misc/_event.twig' with {
      "events": [
        {
          "title": "Event 1"
        }
      ]
    } %}


  </div>
</section>
