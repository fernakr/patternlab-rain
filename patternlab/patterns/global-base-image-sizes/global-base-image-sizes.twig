<style>
  .pl-image{
    margin: 20px auto;
    border: 1px solid #ccc;
    background-color: #f5f5f5;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
{% for size in image_sizes %}
  <div class="pl-image" style="width: {{ size.width }}px; height: {{ size.height }}px;">
    {{ size.name }}: {{ size.width }} x {{ size.height }}
  </div>
{% endfor %}
