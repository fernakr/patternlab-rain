<div class="card card--horizontal card--thumb {{ card.modifier | default }} {% if card.clickCard | default %}card--click{% endif %}" data-scroll-show>
  <div class="card-section">
    <div class="row grid-margin-x align-middle">
      {% if card.image | default %}
        <div class="col col-md-5 col-lg-4 {% if card.image.alignment | default and card.image.alignment == 'right' %}medium-order-2{% endif %}">
          <div class="card-image image-size--square">
            <img {% if card.lazyload_class | default %}data-lazy="{{ card.image.src }}" {% else %} data-src="{{ card.image.src }}" class="js-lazy"{% endif %} alt="{{ card.image.alt }}">
          </div>
        </div>
      {% endif %}
      <div class="col {% if card.image | default %}col-md-7 col-lg-8{% endif %} {% if card.image.alignment  | default and card.image.alignment == 'right' %}medium-order-1{% endif %}">
        <blockquote class="unstyled-blockquote">
          <p class="lead">{{ card.quote }}</p>
          {% if card.attribution | default %}
            <cite>{{ card.attribution.name }}{% if card.attribution.info and card.attribution.name %}, {% endif %}{{ card.attribution.info }}</cite>
          {% endif %}
        </blockquote>
      </div>
    </div>
  </div>
</div>
