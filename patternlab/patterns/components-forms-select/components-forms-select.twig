{% embed 'components/forms/input.twig' %}
  {% block field %}
    <select id="{{ id }}" {% if required | default %}required{% endif %} {% if disabled | default %}disabled{% endif %} {% if selectize | default %}class="js-selectize"{% endif %} name="{{ name }}">
      {% if placeholder | default %}
        <option value="">{{ placeholder }}</option>
      {% endif %}
      {% for option in options %}
        <option {% if value | default == option.value %}selected{% endif %} value="{{ option.value }}">{{ option.label }}</option>
      {% endfor %}
    </select>
  {% endblock %}
{% endembed %}
