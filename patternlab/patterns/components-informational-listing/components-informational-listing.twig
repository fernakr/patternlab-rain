  <ul class="list-unstyled {{ listing_class }}">

    {% for item in items %}

      <li>
        <span class="label {% if item.icon | default %}has-icon{% endif %}">{% if item.icon | default %}<i class="icon icon-{{ item.icon }}"></i>{% endif %}{{ item.label }}</span><br />
        {% if item.url | default %}
          <a href="{{ item.url }}">{{ item.value }}</a>
        {% else %}
          {{ item.value }}
        {% endif %}
      </li>

    {% endfor %}

  </ul>
