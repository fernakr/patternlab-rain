<div class="card card--horizontal">
  <div class="card-section">
    <div class="row grid-margin-x align-middle">
      <div class="col col-lg-7">
        <h2>{{ contact_heading }}</h2>
        <h3>{{ contact_subheading }}</h3>
        {% if contact_description is not empty %}
          <p class="mb-3">{{ contact_description }}</p>
        {% endif %}
        {% if link | default %}
          {% include patternlab_namespace | default ~ 'components/links/read-more.twig' with {
            read_more: link
          } %}
        {% endif %}
      </div>
      <div class="col col-lg-5">
        <div class="callout bg-solid-gray-lightest text-small">
          {% include patternlab_namespace | default ~ 'components/informational/listing.twig' with {
          "listing_class": 'mb-0',
          "items": items
        } %}
        </div>
      </div>
    </div>
  </div>
</div>
