<li class="accordion-item {% if item.accordion_instance == "1" %}is-active{% endif %}" data-accordion-item>
  <a href="#" class="accordion-title" aria-controls="accordion__content-{{ item.accordion_instance }}" aria-expanded="false" id="accordion__toggle-{{ item.accordion_instance }}" aria-selected="false">
    <span class="accordion__heading">{{ item.heading }}</span>
  </a>
  <div class="accordion-content" data-tab-content id="accordion__content-{{ item.accordion_instance }}" aria-hidden="true" aria-labelledby="accordion__content-{{ item.accordion_instance }}">
    {% block accordion_content %}
      {{ item.content }}
    {% endblock %}
  </div>
</li>
