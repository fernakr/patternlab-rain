

  {% embed 'components/containers/slick.twig' with {
    slick_class: 'slick-slider--equalize'
  } %}
    {% block slide_content %}
      {% for slide in slides %}
          <div>
            {% include 'components/teasers/card-testimonial.twig' with {
              card: {
                image: slide.image,
                lazyload_class: 'data-lazy',
                quote: slide.quote,
                attribution: slide.attribution,

              }
            }%}
          </div>
        {% endfor %}
    {% endblock %}
  {% endembed %}

