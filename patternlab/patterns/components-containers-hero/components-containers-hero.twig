<div class="hero text-white">
  <div class="grid-container">
    <div class="grid-x">
      <div class="cell medium-8">
        {% include patternlab_namespace | default ~ 'components/navigation/breadcrumbs.twig' with breadcrumbs %}
        <div class="hero_content">
          <h1>{{ heading }}</h1>
          {% if subheading | default %}
            <p class="lead">{{ subheading }}</p>
          {% endif %}
        </div>
      </div>
      <div class="cell medium-4">
        {% include patternlab_namespace | default ~ 'components/utils/add2any.twig' %}
      </div>
    </div>
  </div>
</div>
