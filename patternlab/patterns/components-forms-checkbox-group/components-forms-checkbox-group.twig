  <fieldset class="options">
    <legend>{{ label }} {% if required | default %}<span class="form-required">*</span>{% endif %}</legend>
    <ul class="checkbox-group no-bullet">
      {% for option in options %}
        <li>{% include patternlab_namespace | default ~ 'components/forms/checkbox.twig' with {
         field_id: field_id,
         checkbox_value: option.value,
         name: field_name,
         checkbox_label: option.label
        }%}</li>
      {% endfor %}
    </ul>
    {% if required %}
      <span class="form-error">{{ label }} is required</span>
    {% endif %}
  </fieldset>
